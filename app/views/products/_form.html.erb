<%= render "layouts/errors", :object => @product %>
<%= form_for @product, remote: true do |f| %>
  <%= f.label :name, class: 'new_product' %>
  <%= f.text_field :name, class: 'new_product' %>
  <%= f.label :description, class: 'new_product' %>
  <%= f.text_field :description, class: 'new_product' %>
  <%= f.label :price, class: 'new_product' %>
  <%= f.number_field :price, class: 'new_product' %>

  <%= f.submit "Add",class: 'btn green' %>
<% end %>
